<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearYgeia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryEu"
        android:orientation="vertical">

        <TextView
            style="@style/genikes_epikefalida"
            android:text="@string/genikes_epikefalis" />

        <TextView
            style="@style/genikes_keimeno"
            android:text="@string/genikes_textEpeksigisi" />

        <TextView
            android:id="@+id/textView"
            style="@style/view_edit_header_for_item"
            android:text="@string/genikes_text_katigories" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativeproto"
            style="@style/view_edit_for_item_onoma"
            android:layout_below="@+id/textView">

            <TextView
                style="@style/genikes_eidiko_text"
                android:text="@string/genikes_eidiko_epeksigimatiko_text" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="3." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="4." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5." />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            style="@style/view_edit_header_for_item"
            android:text="@string/genikes_lamvanomeni" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/view_edit_for_item_onoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">

            <TextView
                style="@style/genikes_eidiko_text"
                android:text="@string/genikes_eidos_dosologia" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2." />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="3." />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <TextView
            style="@style/view_edit_header_for_item"
            android:text="@string/genikes_simpliromata_kai_dosologia" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/view_edit_for_item_onoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_eidi_simpliromaton" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_sinuikes_veltiosis" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_sinuikes_ypotropis" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_nosimata" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_epemvasis" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <TextView
            style="@style/view_edit_header_for_item"
            android:text="@string/genikes_piesi" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/view_edit_for_item_onoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_iremia" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TextView
            style="@style/view_edit_header_for_item"
            android:text="@string/genikes_klironomikotita" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/view_edit_for_item_onoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_paidia" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_adelfia" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_pasxoyn" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_pateras" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/genikes_mana" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/buttonYgeiaBack"
                style="@style/genikes_arrows"
                android:layout_gravity="start"
                android:layout_marginLeft="7dp"
                android:src="@drawable/arrow_left" />

            <ImageButton
                android:id="@+id/buttonYgeiaNext"
                style="@style/genikes_arrows"
                android:layout_gravity="end"
                android:layout_marginRight="7dp"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

        <View style="@style/view_se_ola"></View>

    </LinearLayout>
</ScrollView>
