<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabText" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:dividerPadding">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:divider">@android:color/black</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">#000000</item>
    </style>

    <style name="view_edit_header_for_item">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/view_edit_item_header_bg</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>

    <style name="view_edit_for_item_onoma">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_edit_item_bg</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="view_edit_for_item_stoixeia">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_edit_item_stoixeia</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="view_edit_for_item">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_portokali</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="view_edit_for_item_bar">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_edit_item_bar</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">@color/accentForSlide</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="prosopikes_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="prosopikes_imerominia">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="prosopikes_button_end">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@null</item>
    </style>

    <style name="prosopikes_button_end_mail" parent="prosopikes_button_end">
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="prosopikes_textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
